<!-- the backbone template of the mask view and the model defined in the 
	mask_panel_model.json -->
<div id='<%= maskPanelContainerId%>'
	style="cursor:pointer;display:none;position:absolute;left:0px;top:0px;opacity:<%= maskPanelContainerOpacity%>;background-color:<%= maskPanelContainerBgColor%>; width:<%= maskPanelContainerWidth%>;height:<%= maskPanelContainerHeight%>;z-index:<%= maskPanelContainerZindex%>">
	<div id='<%= maskPanelId%>'
		style='position:absolute;left:<%= maskPanelLeft%>;top:<%= maskPanelTop%>;width:<%= maskPanelWidth%>;height:<%= maskPanelHeight%>'>
		<img id='<%= maskPanelGifId%>'
			style="width:<%= maskPanelGifWidth%>;height:<%= maskPanelGifHeight%>;left:<%= maskPanelGifLeft%>;top:<%= maskPanelGifTop%>;position:relative;"
			src='<%= maskPanelGifPath%>' />
		<span id='<%= maskPanelTextId%>'
			style='width:<%= maskPanelTextWidth%>;text-align:center;position:absolute;color:<%= maskPanelTextColor%>;left:<%= maskPanelTextLeft%>;top:<%= maskPanelTextTop%>;font-size:<%= maskPanelTextFontSize%>;'><%= maskPanelText%></span>
	</div>
</div>